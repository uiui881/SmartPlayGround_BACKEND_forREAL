{{>layout/header}}

<h1>관리자 등록</h1>

<div class ="col-md-12">
    <div class ="col-md-4">
        <form>

            <div class ="form-group">
                <label for="managerName">관리자 이름</label>
                <input type ="text" class ="form-control"
                       id="managerName" placeholder="관리자 이름을 입력하세요">
            </div>

            <div class ="form-group">
                <label for="institution">관리자 소속</label>
                <input type ="text" class ="form-control"
                       id="institution" placeholder="관리자 소속을 입력하세요">
            </div>

            <div class ="form-group">
                <label for="contact">관리자 연락처</label>
                <input type ="text" class ="form-control"
                       id="contact" placeholder="관리자 연락처를 입력하세요">
            </div>

        </form>
        <a href ="/managerInfos/list" role="button" class ="btn btn-secondary">취소</a>
        <button type=button" class="btn btn-primary" id="btn-managerInfos-save">등록</button>
    </div>
</div>
{{>layout/footer}}